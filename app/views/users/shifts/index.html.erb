<div class="container">
 <div class="row mt-5">
  <div class="col-md-4">
   <%= month_calendar events: @shifts do |date, shifts| %>
    <%= date.day %>
   <% end %>
  </div>
  <div class="col-md-8 mt-4">
   <table class="table table-bordered table-hover">
    <thead>
      <tr>
       <th>スタッフ</th>
       <th>利用者</th>
       <th>開始時刻</th>
       <th>終了時刻</th>
       <th>仕事内容</th>
       <th>介護の種類</th>
       <th>ステータス</th>
       <th></th>
      </tr>
    </thead>
    <tbody>
     <% @shift_today.each do |shift| %>
      <tr>
       <td><%= shift.staff %></td>        
       <td><%= shift.customer_na %></td>
       <td><%= shift.start_time.hour %>：<%= shift.start_time.min %></td>
       <td><%= shift.end_time.hour %>：<%= shift.end_time.min %></td>
       <td><%= shift.type %></td>
       <td><%= shift.work %></td>
       <td><%= shift.status %></td>
       <td><%= link_to "詳細", shift_path(shift), class: "text-dark" %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
   </div>
 </div>
</div>

