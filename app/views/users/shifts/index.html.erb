<div class="container">
 <div class="row mt-5">
  <div class="col-md-8">
   <table class="table table-bordered table-hover">
    <thead>
      <tr>
       <th>実施日</th>
       <th>スタッフ</th>
       <th>利用者</th>
       <th>開始時刻</th>
       <th>終了時刻</th>
       <th>仕事内容</th>
       <th>介護の種類</th>
       <th></th>
      </tr>
    </thead>
    <tbody>
     <% @shifts.each do |shift| %>
      <tr>
       <td><%= shift.start_time.to_date %></td>
       <td><%= shift.staff %></td>        
       <td><%= shift.customer_na %></td>
       <td><%= shift.start_time.hour %>：<%= shift.start_time.min %></td>
       <td><%= shift.end_time.hour %>：<%= shift.end_time.min %></td>
       <td><%= shift.type %></td>
       <td><%= shift.work %></td>
       <td><%= link_to "詳細", shift_path(shift), class: "text-dark" %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
   </div>
 </div>
</div>

