<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>

      <%= month_calendar events: @shifts do |date, shifts| %>
          <%= date.day %>
      <% end %>
    </div>
    <div class="col-md-8">
      <h4><%= Date.today %>の予定</h4>
      <table class="table table-hover">
        <thead>
          <th>#</th>
          <th><i class="fas fa-briefcase"></i></th>
          <th><i class="fas fa-users"></i></th>
          <th><i class="fas fa-house-user"></i></th>
          <th><i class="fab fa-algolia"></i></th>
          <th></th>
        </thead>
        <% @shift_today.each do |shift| %>
        <tbody>
          
          <td><%= @sequence.next %></td>
          <td><%= shift.start_time.hour %>：<%= shift.start_time.min %>〜<%= shift.end_time.hour %>：<%= shift.end_time.min %></td>
          <td><%= shift.staff %></td>
          <td><%= shift.customer_na %> 様</td>
          <th>[<%= shift.status %>]</i></th>
          <td><%= link_to "詳細", shift_path(shift), class: "btn btn-outline-secondary" %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>




