<div class="container">
 <div class="row">
   <div class="col-md-8">
     <table class="table table-borderless">
       <tr>
         <th>実施日</th>
         <td><%= @shift.start_time.to_date %></td>
       </tr>
       <tr>
         <th>スッタフ名</th>
         <td><%= @shift.staff %></td>
       </tr>
       <tr>
         <th>利用者</th>
         <td><%= @shift.customer_na %></td>
       </tr>
       <tr>
         <th>開始時刻</th>
         <td><%= @shift.start_time.hour %>：<%= @shift.start_time.min %></td>
       </tr>
       <tr>
         <th>終了時刻</th>
         <td><%= @shift.end_time.hour %>：<%= @shift.end_time.min %></td>
       </tr>
       <tr>
         <th>仕事内容</th>
         <td><%= @shift.type %></td>
       </tr>
       <tr>
         <th>介護の種類</th>
         <td><%= @shift.work %></td>
       </tr>
     </table>
     <div class="d-flex justify-content-center">
          <%= link_to "編集する", edit_admins_shift_path(@shift), class:"btn btn-primary" %>
      </div>
   </div>

 </div>
</div>