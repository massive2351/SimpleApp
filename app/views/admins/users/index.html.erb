<div class="container">
  
  <div class="row mx-auto">
    <div class="col-md-8">
        <p class="h4 mt-4 mb-5">スタッフ一覧</p>
      
    <%= form_tag(search_admins_users_path, method: "get") do %>
      <p class="h4 mt-4 mb-5">
          <%= label_tag :last_name, "名前" %><%= text_field_tag :last_name, params[:last_name], class: 'form-control bootstrap-date-only-width' %>
          <%= submit_tag "検索", class:"btn btn-outline-secondary" %>
      </p>
    </div>
    <% end %>
  </div>
  <div class="row text-center">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr class="bg-light">
            <th>スタッフID</th>
            <th>写真</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>電話番号</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= attachment_image_tag user, :image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
              <td><%= user.last_name %> <%= user.first_name %></td>
              <td><%= user.email %></td>
              <td><%= user.telephone_number %></td>
              <td>
                <%= link_to "詳細", admins_user_path(user), class:"btn btn-outline-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>