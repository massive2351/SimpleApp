<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @user, url: admins_user_path, local: true do |f| %>
          <div class="form-row">
            <div class="form-group col">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
            <div class="form-group col">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <%= f.label :last_name_kana %>
              <%= f.text_field :last_name_kana, class: "form-control" %>
            </div>

            <div class="form-group col">
              <%= f.label :first_name_kana %>
              <%= f.text_field :first_name_kana, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4">
              <%= f.label :postal_code, "郵便番号(ハイフン不要)" %> 
              <%= f.text_field :postal_code, class: "form-control" %>
            </div>
            <div class="form-group col-8">
              <%= f.label :address, "住所(部屋番号まで)" %>
              <%= f.text_field :address, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <%= f.label :telephone_number, "電話番号(ハイフン不要)" %>
              <%= f.text_field :telephone_number, class: "form-control" %>
            </div>
            <div class="form-group col">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="form-group col-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>