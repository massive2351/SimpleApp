<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
     <h4>連絡一覧</h4>
     <% if flash[:notice] %>
      <%= flash[:notice] %>
     <% end %>
     <table class="table table-hover">
       <thead>
         <th>タイトル</th>
         <th>本文</th>
         <th></th>
         <th></th>
       </thead>
       <% @informations.each do |information| %>
       <tbody>
         <td>[<%= information.title %>]</td>
         <td>「<%= information.body %>」</td>
         <td><%= link_to "編集", edit_admins_information_path(information), class: "btn btn-outline-secondary" %></td>
         <td><%= link_to "消去", admins_information_path(information), method: :delete, class: "btn btn-outline-secondary" %></td>
       </tbody>
       <% end %>
     </table>
    </div>
    <div class="col-md-4 mt-5">
      <%= form_with model: @information, url: admins_informations_path, local: true do |f| %>
      <div class="form-group">
        <p>タイトル</p><%= f.text_field :title, class: "form-control #{"is-invalid" if @information.errors.include?(:title)}" %><%= render 'shared/errors', obj: @information, column: :title %>
      </div>

      <div class="form-group">
        <p>内容</p><%= f.text_area :body, rows: "5", placeholder: "ここに連絡事項を記述してください", class: "form-control edit-form #{"is-invalid" if @information.errors.include?(:body)}" %>
        <%= render 'shared/errors', obj: @information, column: :body %>
      </div>
      <div>
        <p><%= f.submit '新規登録', class: "btn btn-success" %></p>
      </div>
      <% end %>
    </div>
      
  </div>
</div>