
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-5 mx-auto">
       <p class="h4 mt-4 mb-5">連絡編集</p>
      </div>
      
      <%= form_with model: @information, url: admins_information_path, local: true do |f| %>
      <div class="col-md-5 mx-auto">
        <div class="form-group">
          <p>タイトル</p><%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <p>内容</p><%= f.text_area :body, rows: "5", placeholder: "ここに連絡事項を記述してください", class: "form-control edit-form" %>
        </div>
      </div>

      <div class="col-md-4 mx-auto mb-4 mt-4">
        <p><%= f.submit '更新', class: "btn btn-outline-secondary" %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>