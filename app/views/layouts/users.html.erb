<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Londrina+Shadow" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Sawarabi+Gothic" rel="stylesheet">
    
  </head>

  <body>
    <header class="shadow-sm" style="background: #FFFFCC;">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to 'Simple', top_path, class: "head navbar-brand p-3 rounded-pill logo" %>
          <div class="collapse navbar-collapse" id="navbarNavDropDown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'スケジュール', top_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>

                <li class="nav-item">
                  <%= link_to '共通連絡', informations_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>

                <li class="nav-item">
                  <%= link_to 'シフト', shifts_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>

                <li class="nav-item">
                  <%= link_to '記録', records_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>
                
                <li class="nav-item">
                  <%= link_to '利用者', customers_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>

                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link text-dark tab rounded-pill" %>
                </li>

              <% else %>
                <li class="nav-item">
                  <%= link_to '', new_user_session_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>
                <li class="nav-item">
                  <%= link_to '', new_admin_session_path, class: "nav-link text-dark tab rounded-pill" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="footer h4 text-center" style="height: 80px; line-height: 80px;">Simple</footer>
  </body>
</html>