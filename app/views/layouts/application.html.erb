<!DOCTYPE html>
<html>
  <head>
    <title>SimpleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link text-dark tab rounded-pill" %>
    <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: "nav-link text-dark tab rounded-pill" %>
    <% end %>
    <%= yield %>
  </body>
</html>
